<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="TextViewClickable">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="HeaderTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderTextStyle.Small" parent="HeaderTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HeaderTextStyle.Medium" parent="HeaderTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HeaderTextStyle.Large" parent="HeaderTextStyle">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="WalletItemTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="WalletItemTextStyle.Small" parent="WalletItemTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WalletItemTextStyle.Large" parent="WalletItemTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/mainFragmentBg</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">center</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceStyle</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TabTextAppearanceStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tabNotSelected</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="MenuButtonDark">
        <item name="android:textColor">@color/menuText</item>
        <item name="android:background">@color/transparentColor</item>
    </style>

    <style name="MenuButtonWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_menu_button</item>
    </style>
    
    <style name="VerificationViewStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_verification</item>
    </style>

    <style name="SeekBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="DetailEditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">@color/detailsTextColor</item>
        <item name="colorControlNormal">@color/detailsTextColor</item>
        <item name="colorControlActivated">@color/detailsTextColor</item>
        <item name="colorControlHighlight">@color/detailsTextColor</item>
        <item name="colorAccent">@color/detailsTextColor</item>
    </style>

</resources>