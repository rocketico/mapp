<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderStyle" parent="AppTheme">
        <item name="android:textColor">@color/White</item>
    </style>
    
    <style name="HeaderTextStyle1" parent="HeaderStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HeaderTextStyle2" parent="HeaderStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HeaderTextStyle3" parent="HeaderStyle">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="WalletItemTextStyle">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="WalletItemTextStyle.Small" parent="WalletItemTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WalletItemTextStyle.Large" parent="WalletItemTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
