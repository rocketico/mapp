<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="HeaderStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderTextStyle1" parent="HeaderStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HeaderTextStyle2" parent="HeaderStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HeaderTextStyle3" parent="HeaderStyle">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="WalletItemTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="WalletItemTextStyle.Small" parent="WalletItemTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WalletItemTextStyle.Large" parent="WalletItemTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/mainFragmentBg</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">center</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceStyle</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TabTextAppearanceStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tabNotSelected</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="MenuButton1">
        <item name="android:textColor">@color/menuText</item>
        <item name="android:background">@color/transparentColor</item>
    </style>

    <style name="MenuButton2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparentColor</item>
    </style>

</resources>